<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@drawable/green"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/teh"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:justificationMode="inter_word"
        android:text="Manfaat teh antara lain adalah sebagai antioksidan, memperbaiki sel-sel yang rusak, menghaluskan kulit, melangsingkan tubuh, mencegah kanker, mencegah penyakit jantung, mengurangi kolesterol dalam darah, melancarkan sirkulasi darah. Maka, tidak heran bila minuman ini disebut-sebut sebagai minuman kaya manfaat."
        android:textStyle="bold" />

</LinearLayout>