<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@drawable/green"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/lemon"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:justificationMode="inter_word"
        android:text="Memang banyak orang yang tidak menyangka jika minuman yang satu ini bermanfaat untuk kesehatan. Hal ini tidak mengherankan mengingat lemon tea banyak beredar dalam bentuk kemasan instan. Meski begitu, jika Anda mengonsumsi lemon tea Kaya antioksidan,Baik untuk kulit,Bantu tingkatkan daya tahan tubuhBagus untuk kesehatan jantung."
        android:textStyle="bold" />

</LinearLayout>