<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@drawable/green"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/vanilalate"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/coustard"
        android:justificationMode="inter_word"
        android:text="jika kalian ingin minum tapi tidak terlalu kuat rasa paitnya kami sarankan untuk memilih minuman ini karena vanila latte adalah minuman campuran kopi dengan susu. Rp 20.000/pcs"
        android:textColor="#0B0B0B"
        android:textSize="16sp" />

</LinearLayout>